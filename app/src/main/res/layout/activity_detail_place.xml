<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.detail.DetailPlaceActivity">

    <!-- MEDIA -->
    <ImageView
        android:id="@+id/iv_place_detail"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="@string/carkir_contentDescription_imageView_card_location"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toTopOf="@id/guidelineHorizontalFirst"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <!-- STATUS -->
    <TextView
        android:id="@+id/tv_status_place_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:textColor="?colorSecondaryVariant"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_place_detail"
        tools:text="Buka" />

    <!-- TIME -->
    <TextView
        android:id="@+id/tv_time_place_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textColor="?colorSecondaryVariant"
        app:layout_constraintBottom_toBottomOf="@id/tv_status_place_detail"
        app:layout_constraintStart_toEndOf="@id/tv_status_place_detail"
        app:layout_constraintTop_toTopOf="@id/tv_status_place_detail"
        tools:text="08.00 - 21.00 WIB" />

    <!-- NAME -->
    <TextView
        android:id="@+id/tv_name_place_detail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="16dp"
        android:textColor="?colorPrimary"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_status_place_detail"
        tools:text="Parking Area - Pondok Indah Mall" />

    <!-- ADDRESS -->
    <TextView
        android:id="@+id/tv_address_place_detail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:textColor="?colorSecondary"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_name_place_detail"
        tools:text="Jalan Metro Pondok Indah Kav. IV, Pd. Pinang, Kec. Kby. Lama, Kota Jakarta Selatan, Daerah Khusus Ibukota Jakarta" />

    <!-- PRICE -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_price_place_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardCornerRadius="5dp"
        app:cardElevation="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_address_place_detail"
        app:strokeColor="?colorPrimary"
        app:strokeWidth="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingTop="8dp"
            android:paddingEnd="16dp"
            android:paddingBottom="8dp">

            <!-- FIRST HOURS -->
            <TextView
                android:id="@+id/tv_price_first_hour"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="?colorSecondary"
                android:textStyle="bold"
                tools:text="Rp 4.000 - Rp 7.500 untuk satu jam pertama." />

            <!-- NEXT HOURS -->
            <TextView
                android:id="@+id/tv_price_next_hour"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="?colorSecondary"
                android:textStyle="bold"
                tools:text="Rp 2.000 - Rp 6.000 untuk setiap jam berikutnya." />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- TOTAL EMPTY SPACE -->
    <TextView
        android:id="@+id/tv_total_empty_space_place_detail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:textColor="?colorPrimary"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/card_price_place_detail"
        tools:text="43 Tempat Parkir Tersedia" />

    <!-- LIST EMPTY SPACE -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_clusters_parking"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="16dp"
        android:orientation="vertical"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_total_empty_space_place_detail"
        tools:listitem="@layout/card_item_parking" />

    <!-- STATE EMPTY LIST -->
    <TextView
        android:id="@+id/tv_empty_clusters_parking"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="@string/carkir_detail_empty_floor"
        android:textAlignment="center"
        android:textColor="?colorSecondary"
        android:textSize="18sp"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_total_empty_space_place_detail"
        tools:visibility="visible" />

    <!-- FAVORITE BUTTON -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_favorite_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="24dp"
        android:contentDescription="@string/carkir_contentDescription_FloatingActionButton_favorite"
        app:backgroundTint="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ic_favorite_border_24"
        app:tint="@android:color/holo_red_light" />

    <!-- HANDLE STATE LOADING & ERROR -->
    <RelativeLayout
        android:id="@+id/container_state"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="?colorOnPrimary"
        android:elevation="8dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_error_detail"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_centerInParent="true"
            android:contentDescription="@string/carkir_contentDescription_imageView_offline"
            android:visibility="visible"
            app:srcCompat="@drawable/ic_offline" />

        <TextView
            android:id="@+id/tv_error_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_error_detail"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="16dp"
            android:text="@string/carkir_detail_title_offline"
            android:textAlignment="center"
            android:textColor="?colorSecondary"
            android:textSize="18sp"
            android:textStyle="bold"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_error_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_error_detail"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:text="@string/carkir_detail_description_offline"
            android:textAlignment="center"
            android:textColor="?colorSecondary"
            android:textStyle="bold"
            android:visibility="gone" />

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" />
    </RelativeLayout>

    <!-- GUIDELINE FOR IMAGE -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineHorizontalFirst"
        android:layout_width="wrap_content"
        android:layout_height="64dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintGuide_percent="0.3"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>